extends ../_skeleton-component

block append variables
  - var firstParent = 'components'
  - var currentPage = 'scrollspy'
  - var ATTRS_BODY = { 'data-spy': 'scroll', 'data-target': '#v-pills', 'data-offset': 90 };
  -
    var pageHeader = {
      title: 'Scrollspy',
      description: "Automatically update Bootstrap navigation or list group components based on scroll position to indicate which link is currently active in the viewport.",
      url: `https://getbootstrap.com/docs/${bootstrapVersion}/components/scrollspy/`,
      linkText: 'Scrollspy Bars on Bootstrap'
    }

block component
  .card.shadow-sm.mb-3
    .card-body
      +PageHeader(pageHeader)
   
